body
	position relative
	*
		font-family 'Open Sans Condensed'

#container
	height: 100%
	position absolute
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;

canvas
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	height: 100% !important;
	width: 100% !important;
	background: #eee
	z-index 1

block()
	height 100vh

a.btn
	display inline-block
	border 2px solid white
	padding 10px 30px
	text-transform uppercase
	font-size 12px
	margin-right 20px
	font-weight 600
	transition all 250ms ease-in-out

	&:hover
		color black
		background white

h1,h2,h3,h4,h5,h6
	font-family 'Abril Fatface' !important
	font-weight 300
	letter-spacing 0
	font-size 60px
	letter-spacing -1px
	line-height 80px
	margin 0
	padding 0

h4
	font-size 26px

p
	font-size 18px
	line-height 150%
	margin-bottom 20px

	&:last-of-type
		margin-bottom 0
