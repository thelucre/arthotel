.newsletter
	background black
	color white
	padding 80px
	text-align center

	@media(max-width:t)
		padding 40px

	@media(max-width:m)
		padding 40px 20px

	h2
		line-height 80%

	p
		margin-bottom 15px

	form
		width 50%
		min-width 270px
		max-width 500px
		margin 0 auto

	input
		border-radius 2px
		border 0
		padding 10px
		margin-top 10px
		display block
		margin-left auto
		margin-right auto

	input[type="email"]
		width 100%
		padding 10px
		font-size 20px
		color black

	input[type="submit"]
		background-color gold
		width 200px
		text-transform uppercase
		color black
		font-weight 700
		letter-spacing 2px
		font-size 16px
		transition all 250ms ease-in-out

		&:hover
			background-color darken(gold, 15%)


	.mce_inline_error, #mce-error-response, #mce-success-response
		margin-top 5px

	#mce-success-response
		background-color gold
		color black
		display inline-block
		padding 10px 4px
