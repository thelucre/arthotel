@import '~variables.styl'

.kickstarter
	position relative
	height 0
	padding-bottom 56.25%

	h2
		position absolute
		top 25%
		text-align center
		z-index 2
		width 100%
		color white
		text-shadow 0px 0px 43px black

	iframe
		position absolute
		left 0
		top 0
		bottom 0
		right 0
		width 100%
		height 100%
		poitner-events none

.support
	color black
	background gold
	padding 80px
	text-align center

	.content
		max-width 800px
		margin 35px auto
		text-align left

		a
			border-bottom 2px solid transparent
			transition border-color 150ms ease-in-out
			font-weight 700
			line-height 200%

			&:hover
				border-bottom-color black
