@import '~variables.styl'

.about
	position relative
	height 100vh
	background-size cover
	background-position center center
	color white

	.content
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		max-width 800px

	@media(max-width:tl)
		height auto
		padding 80px

		.content
			position relative
			transform none
			left 0
			top 0

	@media(max-width:t)
		padding 40px

	@media(max-width:m)
		padding 40px 20px
